<div class="container">
  <h1>Sign Up</h1>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">

        <%= form_for @user, url: users_path do |u| %>
          <div class="form-group">
            <%= u.label :first_name %>
            <%= u.text_field :first_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= u.label :last_name %>
            <%= u.text_field :last_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= u.label :email %>
            <%= u.text_field :email, class: "form-control" %>
          </div>
          <%= hidden_field_tag 'wedding_admin', @wedding %>
          <div class="form-group">
            <%= u.label :password %>
            <%= u.password_field :password, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= u.label :password_confirmation %>
            <%= u.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class="modal-footer">
            <%= u.submit 'Sign Up', class: "btn btn-primary btn-block"%>
          </div>
      <% end %>
    </div>

    <div class="col-md-1">
  </div>
</div>
