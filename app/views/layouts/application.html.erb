<!DOCTYPE html>
<html>
  <head>
    <title>I Do</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%#= stylesheet_link_tag    'application',
      "https://fonts.googleapis.com/css?family=Dancing+Script", media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag    'application', href="https://fonts.googleapis.com/css?family=Raleway", media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <span class="navbar-brand">I do</span>
          <span class="glyphicon glyphicon-heart navbar-brand" aria-hidden="true"></span>
        </div>

        <div class="navbar-collapse collapse" id="ido-navbar">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', home_path %></li>

            <% if user_signed_in?%>
              <li><%= link_to 'New Wedding', new_wedding_path %></li>
                <%if current_user.weddings.count > 1 %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Weddings
                    <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <% current_user.weddings.each do |wedding|%>
                            <li><%=link_to wedding.name, wedding_details_path(wedding)%></li>
                      <%end%>
                    </ul>
                  </li>
                </ul>
              <%elsif current_user.weddings.count == 1%>
                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <%= link_to 'My Guests', wedding_guests_path(current_user.weddings.first.id) %>
                  </li>
                  <li>
                    <%= link_to 'My Services', wedding_services_path(current_user.weddings.first.id) %>
                  </li>
                  <li>
                    <%= link_to 'My Registry', wedding_gifts_path(current_user.weddings.first.id) %>
                  </li>
                  <li>
                    <%= link_to 'My Admins', wedding_admins_path(current_user.weddings.first.id) %>
                  </li>
                </ul>
                <%else%>
                <% end %>
                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <p class="navbar-text">Hello <%=current_user.first_name%></p>
                  </li>
                  <li><%= button_to 'Sign Out', sessions_path, method: :delete, class: 'btn btn-default navbar-btn' %></li>
                </ul>
            <% else %>
              <ul class="nav navbar-nav navbar-right">
                <li><%= link_to 'Sign up', new_user_path %></li>
                <li><%= link_to 'Sign in', new_session_path %></li>
              </ul>
            <% end %>
        </div>
      </div>
    </nav>
    <div class="background container-fluid">
      <% if notice || alert %>
        <div class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable" role="alert">
          <%= notice || alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <div class="container-fluid">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
