
<div class="col-md-3 search-form">
  <%= form_tag(weddings_path, method: "get", id: "form-group") do %>
    <%= text_field_tag :search, params[:search] %>
    <%= button_tag do %>
      <span class="glyphicon glyphicon-search search"></span>
    <% end %>
  <% end %>
</div><br><br>

<% @weddings.each do |w| %>
  <h3><% w.name %></h3>
  <hr>
<% end %>

<div>
  <% if params[:search].present? %>
    <% if @wedding.present?%>
      <%@wedding.each do |w|%>
        <%= link_to "#{w.name}", wedding_path(w) %>
      <%end%>
    <%else%>
        <p>There is no wedding containing the term(s):  <%= params[:search] %>.</p>
    <%end%>
  <% end %>
</div>
