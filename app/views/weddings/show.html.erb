<div class="col-md-12 guest-view">
  <h1><%= @wedding.name %></h1><br>

  <div class="col-md-12 wedding-pic-info">
    <% if @wedding.images.present? %>
    <%= image_tag @wedding.images[0].url(:large), class: 'pic' %>
    <% end %>
    <%= @wedding.story %>
  </div>

  <div>
    <div class="col-md-3 wedding-show center">
      <h4 class="center">RSVP</h4>
      <a class="rsvp">
        <span class="glyphicon glyphicon-calendar"></span>
      </a>
    </div>

    <div class="col-md-3 wedding-show center">
      <h4 class="center">Wedding Registry</h4>
      <a class="gift">
        <span class="glyphicon glyphicon-gift"></span>
      </a>
    </div>

    <div class="col-md-3 wedding-show center">
      <h4 class="center">Wedding Info</h4>
      <a href="#">
        <span class="glyphicon glyphicon-list-alt"></span>
      </a>
    </div>


  </div><br>

  <div class="col-md-10 guests" id='guest-list'>
    <%= render 'partials/guest_rsvp', {all_guests: @all_guests} %>
  </div>

  <div class="registry col-md-10">
    <%= render 'partials/registry', {gifts: @gifts} %>
  </div>

</div>
