<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <%= form_for @wedding do |w| %>
      <div class="form-group">
        <%= w.label :name %>
        <%= w.text_field :name, class: "form-control", placeholder: 'ex: John&Joane' %>
      </div>
      <div class="form-group">
        <%= w.label :budget %>($)
        <%= w.text_field :budget, class: "form-control", placeholder: 'Please enter just numbers' %>
      </div>
      <div class="form-group">
        <%= w.label :wedding_date %>
        <%= w.date_field :date, class: "form-control" %>
      </div>

      <div class="modal-footer">
        <%= w.submit 'Create Wedding', class: "btn btn-primary btn-block"%>
      </div>
  <% end %>
</div>

