<div class="search-form">
  <%= render 'partials/search_guest_table' %>
</div><br>
<hr>
<div id="all-guests">
  <ul class="all-guests" style="list-style-type: none;">
    <% all_guests.each do |guest| %>
      <li class="guest-name <%= 'table-true' if guest.table_id%>" data-id="<%= guest.id%>">
        <div class="col-md-6">
          <h5>
            <%= guest.name %>
          </h5>
          <% if guest.table_id != nil%>
            (table: <%= guest.table_id%>)
          <% end %>
        </div>

        <div class="col-md-6 text-right">
          <button class="btn btn-default add-guest">Add to Table</button>
        </div>
      </li>
    <% end %>
  </ul>
</div>
