<div class="search-form">
  <%= render 'partials/search_guest' %>
</div><br>
<hr>
<div id="all-guests">
  <ul class="all-guests" style="list-style-type: none;">
    <% all_guests.each do |guest| %>
      <li class="guest-name" data-id="<%= guest.id%>">
        <div class="col-md-6">
          <h5>
            <%= guest.name %>
          </h5>
        </div>

        <div class="col-md-6 text-right">
          <button class="cant-make-it btn btn-danger <%= 'active' unless guest.rsvp == nil || guest.rsvp == true %>">I can't make it</button>
          <button class="im-going btn btn-success <%= 'active' if guest.rsvp == true %>">I'm going</button>
        </div>
      </li>
    <% end %>
  </ul>
</div>
